{
    "version": 10,
    "configurePresets": [
    {
        "name": "windows-base",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/build/${presetName}",
        "installDir": "${sourceDir}/out/install/${presetName}",
        "cacheVariables": {            
        },
        "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
        }
    },        
    {
        "name": "win-msvc-base",
        "hidden": true,
        "inherits": "windows-base",
        "cacheVariables": {
            "CMAKE_C_COMPILER": "cl.exe",
            "CMAKE_CXX_COMPILER": "cl.exe"
        }

    },
    {
        "name": "x64-debug-msvc",
        "displayName": "x64 Debug msvc",
        "inherits": "win-msvc-base",
        "architecture": {
            "value": "x64",
            "strategy": "external"
        },
        "cacheVariables": {
            "LIB_TYPE_DIR_NAME": "msvc-debug",
            "LIB_NAME_SUFFIX": "d",
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_CXX_FLAGS": "/utf-8",
            "CMAKE_C_FLAGS": "/utf-8",
            "CMAKE_CXX_FLAGS_DEBUG": "/O2"
        }
    },
    {
        "name": "x64-release-msvc",
        "displayName": "x64 Release msvc",
        "inherits": "win-msvc-base",
        "architecture": {
            "value": "x64",
            "strategy": "external"
        },
        "cacheVariables": {
            "LIB_TYPE_DIR_NAME": "msvc-release",
            "LIB_NAME_SUFFIX": "",
            "CMAKE_BUILD_TYPE": "Release",
            "CMAKE_CXX_FLAGS": "/utf-8",
            "CMAKE_C_FLAGS": "/utf-8"
        }
    }
    ],
    "buildPresets": [
        {
            "name": "msvc-debug-build",
            "description": "",
            "displayName": "",
            "configurePreset": "x64-debug-msvc"
        },        
        {
            "name": "msvc-release-build",
            "description": "",
            "displayName": "",
            "configurePreset": "x64-release-msvc"
        }
    ]
}